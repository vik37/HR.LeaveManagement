

<EditForm Model="@LeaveTypeVM" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name</label>
            <div>
                <InputText @bind-Value="@LeaveTypeVM.Name" class="form-control" />
                <ValidationMessage For="@(() => LeaveTypeVM.Name)" />
            </div>
        </div>
        <div class="form-group">
            <label>Default Days:</label>
            <div>
                <InputNumber @bind-Value="@LeaveTypeVM.DefaultDays" class="form-control" />
                <ValidationMessage For="@(() => LeaveTypeVM.DefaultDays)" />
            </div>
        </div>
    </fieldset>
    <hr />
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success m-2">@ButtonText</button>
    }

    <BackToList Target="leavetypes" />
</EditForm>

